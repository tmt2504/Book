@model Category

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary">Delete category</h2>
            <hr />
        </div>
        <div class="mb-3 row px-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" disabled/>
        </div>
        <div class="mb-3 row px-3">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled/>
        </div>
        <div class="row px-1">
            <div class=" col-6">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class=" col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back</a>
            </div>
        </div>

    </div>
</form>
